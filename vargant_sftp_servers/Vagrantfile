Vagrant.configure("2") do |config|
  (1..3).each do |i|
    config.vm.define "sftp#{i}" do |node|
      node.vm.box = "ubuntu/bionic64"
      node.vm.hostname = "sftp#{i}"
      node.vm.network "private_network", ip: "192.168.33.#{10+i}"

      # Initial setup and SSH key generation
      node.vm.provision "shell", inline: <<-SHELL
        apt-get update
        apt-get install -y openssh-server
        sudo sed -i 's/PasswordAuthentication no/PasswordAuthentication yes/' /etc/ssh/sshd_config
        systemctl restart ssh
      SHELL

      node.vm.provision "shell", path: "generate_ssh_key.sh", privileged: false

      # Run key exchange script after all VMs are up
      if i == 3
        node.vm.provision "shell", path: "exchange_ssh_keys.sh", privileged: false, run: "always"
      end
    end
  end
end